<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/llOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_dim_white_bg"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:padding="5dp"
                android:text="Choose Options"
                android:textColor="@color/app_sidebar_bg_gray"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMyImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="My Images"
                android:textColor="@color/text_blue"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFreeImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Free Images"
                android:textColor="@color/text_blue"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:background="@color/line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPhotoLib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="visible"
                android:text="Photo Library"
                android:textColor="@color/text_blue"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:background="@color/line" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/metropolis_medium"
                android:gravity="center"
                android:padding="10dp"
                android:visibility="visible"
                android:text="Take Photo"
                android:textColor="@color/text_blue"
                android:textSize="14sp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_white_bg"
            android:fontFamily="@font/metropolis_semibold"
            android:gravity="center"
            android:padding="5dp"
            android:text="Close"
            android:textColor="@color/app_sidebar_bg_gray"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/llOption"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>