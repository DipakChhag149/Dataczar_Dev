<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llbackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingStart="8dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="2dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/tvNotiHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Notification Title Header"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:layout_weight="8.5"/>

        <ImageView
            android:id="@+id/imgArchived"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:paddingEnd="0dp"
            android:src="@drawable/ic_archive_new"/>

        <View
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/tvNotiDtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="17sp"
            android:text="Notification Title Header"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="@color/app_icon_color_gray"
            android:layout_weight="9"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_forword"
            app:tint="@color/app_icon_color_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="32dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_weight="10">

        <LinearLayout
            android:id="@+id/llblank"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:text=""/>

        <TextView
            android:id="@+id/tvNotiTime"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:textSize="14sp"
            android:padding="2dp"
            android:textColor="@android:color/darker_gray"
            android:text="5 day ago" />

        <View
            android:layout_width="32dp"
            android:layout_height="32dp" />

    </LinearLayout>


</LinearLayout>



